
*
    box-sizing border-box
    margin 0
    padding 0

html
    font-size 100%

body
    background rgba(first_color, .9)
    //font-family sans-serif, Arial
    font-family 'Montserrat', cursive;

.main_container
    .header--app
        background white
        //border-bottom 1px solid lightgrey
        //box-shadow 0 1px 1px rgba(black, .2)
        display flex
        align-items center
        overflow hidden
        padding 1rem 2rem
        padding-left 0
        position fixed
        width 100%
        z-index 3
        font-size .9rem
        height 50px

        .menu_navbar_icon
            background none
            border none
            outline 0
            margin-left 1rem
            cursor pointer
            .icon_container
                height 1.5rem

        &-menu
            position absolute
            right 2rem
            ul
                .item
                    display inline-block
                    position relative
                    transition all .3s
                    &:after
                        content ''
                        background color_primario
                        bottom 0
                        height 2px
                        left 0
                        width 0
                        position absolute
                        transition all .3s
                    &:hover
                        background whitesmoke
                        &:after
                            width 100%
                    a
                        cursor pointer
                        display block
                        padding 1rem .5rem
                .item.active
                    background whitesmoke
                    &:after
                        width 100%

        .user_account
            center_v()
            right 3%

    .spa_context
        color white
        display inline-block
        margin-left 20%
        margin-top 60px
        padding 2rem
        transition all .3s
        width 80%
        h1
        h2
            font-weight normal
        &-title
            font-size 2rem
            padding-bottom 2rem
            text-align center
        &-content
            &-subtitle
                font-size 1rem
                padding 1rem

    .section
        .section-icons
            .list
                display flex
                justify-content space-around
                align-items center
                flex-wrap wrap
                &-item
                    img
                        max-width 100px
